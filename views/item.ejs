<%- include('header') %>

    <div class="container">
        <h2>Danh mục</h2>
        <a href="/user/create" class="btn btn-sm btn-primary">Thêm mới danh mục</a>
        <hr>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Hinh anh</th>
                    <th>age</th>
                    <th>phone</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% views.forEach((item, key)=> { %>
                    <tr>
                        <td>
                            <%= item.id %>
                        </td>
                        <td>
                            <%= item.name %>
                        </td>
                        
                        <td>
                            <img src="./uploads/<%= item.image %>" alt="" width="50">
                          
                        </td>
                        <td>
                            <%= item.age %>
                        </td>
                      
                        <td>
                            <%= item.phone %>
                        </td>
                        
                        <td>
                            <a onclick="return confirm('Chắc chưa?')" href="/delete-product/<%= item.id %>"
                                class="btn btn-danger">Xóa</a>

                                <a  href="/edit-product/<%= item.id %>"
                                    class="btn btn-primary">Sửa</a>
                        </td>
                        
                    </tr>
                    <% }) %>
            </tbody>
        </table>

    </div>

    <%- include('footer') %>