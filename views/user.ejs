<%- include('header') %>

    <div class="container">
        <h2>Danh mục</h2>
        <a href="/user/create" class="btn btn-sm btn-primary">Thêm mới danh mục</a>
        <hr>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Hình ảnh</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>phone</th>
                    <th>Money</th>
                   
                </tr>
            </thead>
            <tbody>
                <% views.forEach((item, key)=> { %>
                    <tr>
                        <td>
                            <%= item.id %>
                        </td>
                        <td>
                            <%= item.name %>
                        </td>
                        
                        <td>
                            <img src="./uploads/<%= item.image %>" alt="" width="50">
                          
                        </td>
                        <td>
                            <%= item.email %>
                        </td>
                        <td>
                            <%= item.address %>
                        </td>
                        <td>
                            <%= item.phone %>
                        </td>
                        
                        <td>
                            <%= item.money %>
                        </td>
                        
                    </tr>
                    <% }) %>
            </tbody>
        </table>

    </div>

    <%- include('footer') %>