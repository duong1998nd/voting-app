
  <%- include('header') %>
  
  <%- include('sidebar') %>

  <section class="content">
    <div class="container-fluid">
      <!-- Main row -->
      <div class="row row-cols-2 d-flex justify-content-center" >
        <form action="" method="post" enctype="multipart/form-data">
          
          <div class="row">
            <div class="col">
              <label for="" class="form-label">Tên</label>
              <input type="text" name="name" id="" class="form-control" placeholder="Nguyễn Văn A" aria-describedby="helpId">
            </div>
           
          </div>
          <div class="row">
            <div class="col">
              <label for="" class="form-label">Tuổi</label>
              <input type="text" name="age" id="" class="form-control" placeholder="Tuổi..." aria-describedby="helpId">
            </div>
            <div class="col">
               <label for="" class="form-label">Số điện thoại</label>
              <input type="phone" name="phone" id="" class="form-control" placeholder="Số điện thoại..." aria-describedby="helpId">
            </div>
          </div>
          <div class="row" style="margin-top:15px ;">
            <div class="col">
                <label for="" class="form-label">address</label>
              <textarea name="address" id="" cols="30" rows="5" class="form-control"></textarea>
            </div>
          </div>
          <div class="row">
             <div class="col">
              <label for="formFile" class="form-label">Picture</label>
              <input type="file" name="image" class="form-control" id="formFile">
            </div>
          </div>
          <button type="submit" class="btn btn-primary" style="margin-top:15px ;">Submit</button>
        </form>

      </div>
      <div class="row">

      </div>
      <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
  </section>
  <%- include('footer') %>